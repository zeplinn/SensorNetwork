<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="@($"NetworkHeading{Model.Network.NetworkId}")">
        <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="@($"{Model.DataParent}")"
               href="@($"#NetworkCollapse{Model.Network.NetworkId}")"
               aria-expanded="false" aria-controls="@($"NetworkCollapse{Model.Network.NetworkId}")">
                @Model.Network.NetworkName
            </a>
        </h4>
    </div>
    <div id="@($"NetworkCollapse{Model.Network.NetworkId}")"
         class="panel-collapse collapse" role="tabpanel"
         aria-labelledby="@($"NetworkHeading{Model.Network.NetworkId}")">
        <div class="panel-body">
            <div class="list-group-item-info col-xs-12 col-lg-1">
                @foreach (var sensor in Model.Network.Sensors)
                {
                    @Component.Invoke(nameof(SensorNetwork.Views.Shared.Components.SensorNavVC.SensorNavVC), sensor,Model.Network.NetworkId)
                }
            </div>
            <div id="@($"NetworkGraph{Model.Network.NetworkId}")" class="col-xs-12 col-lg-10" style="height:300px"></div>
        </div>
    </div>
</div>



